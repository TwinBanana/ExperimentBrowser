<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavigation"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <org.chromium.chrome.browser.widget.TintedImageButton
        android:id="@+id/bottom_nav_back_button"
        style="@style/ToolbarButton"
        android:src="@drawable/btn_back"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/accessibility_toolbar_btn_back" />

    <org.chromium.chrome.browser.widget.TintedImageButton
        android:id="@+id/bottom_nav_close_button"
        style="@style/ToolbarButton"
        android:src="@mipmap/ic_close_bottom_menu"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/accessibility_btn_refresh" />

    <org.chromium.chrome.browser.widget.TintedImageButton
        android:id="@+id/bottom_nav_forward_button"
        style="@style/ToolbarButton"
        android:src="@drawable/btn_forward"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" />

</LinearLayout>
